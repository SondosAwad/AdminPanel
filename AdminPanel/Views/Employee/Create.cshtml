@model admin.Models.Employee

@{
    ViewData["Title"] = "Add Employee";
}
<div class="row">
    <div class="col-md-4  card  text-center" style=" margin: 0 auto;
        padding: 3%; margin-top:3%;">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label  class="control-label">Employee Name</label>
                <input asp-for="EmployeeName" class="form-control" />
                <span asp-validation-for="EmployeeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Employee Email</label>
                <input asp-for="EmployeeEmail" class="form-control" />
                <span asp-validation-for="EmployeeEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Company Name</label>
                <select asp-for="CompanyID" class="form-control" asp-items="ViewBag.CompanyID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
